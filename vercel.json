{
  "builds": [
    { "src": "landing/dist/**", "use": "@vercel/static" },
    { "src": "sorting/dist/**", "use": "@vercel/static" },
    { "src": "searching/dist/**", "use": "@vercel/static" },
    { "src": "pathfinding/dist/**", "use": "@vercel/static" }
  ],
  "rewrites": [
    { "source": "/", "destination": "/landing/dist/index.html" },

    { "source": "/sorting", "destination": "/sorting/dist/index.html" },
    { "source": "/sorting/(.*)", "destination": "/sorting/dist/index.html" },

    { "source": "/searching", "destination": "/searching/dist/index.html" },
    { "source": "/searching/(.*)", "destination": "/searching/dist/index.html" },

    { "source": "/pathfinding", "destination": "/pathfinding/dist/index.html" },
    { "source": "/pathfinding/(.*)", "destination": "/pathfinding/dist/index.html" }
  ]
}
